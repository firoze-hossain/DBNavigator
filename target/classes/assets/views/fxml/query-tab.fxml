<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.fxmisc.richtext.CodeArea?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.roze.dbnavigator.controllers.QueryTabController"
      spacing="5">

    <ToolBar styleClass="editor-toolbar">
        <Button text="Execute" onAction="#executeQuery">
            <graphic>
                <ImageView fitWidth="16" fitHeight="16">
                    <Image url="@../../icons/execute.png" />
                </ImageView>
            </graphic>
        </Button>
        <Button text="Format" onAction="#formatSql">
            <graphic>
                <ImageView fitWidth="16" fitHeight="16">
                    <Image url="@../../icons/format.png" />
                </ImageView>
            </graphic>
        </Button>
        <Separator orientation="VERTICAL" />
        <Button text="Save" onAction="#saveQuery">
            <graphic>
                <ImageView fitWidth="16" fitHeight="16">
                    <Image url="@../../icons/save.png" />
                </ImageView>
            </graphic>
        </Button>
    </ToolBar>

    <CodeArea fx:id="sqlEditor" styleClass="sql-editor" />

    <TabPane fx:id="resultsTabPane" styleClass="results-tabs">
        <tabs>
            <Tab text="Results">
                <TableView fx:id="resultTable" styleClass="result-table" />
            </Tab>
            <Tab text="Messages">
                <TextArea fx:id="messagesArea" styleClass="messages-area" editable="false" />
            </Tab>
        </tabs>
    </TabPane>
</VBox>